pipeline {
    agent any
    stages{
        stage('Remove Docker Container') {
            steps {
                sh 'docker container rm -f be' 
            }
        }
        stage('Build Backend Docker Image') {
            steps {
                sh 'cd LMS-BE && docker build -t be1 .'
            }
        }
        stage('run docker container'){
            step{
                sh 'docker run -d --name be -p 8081:8080 be1' 
            }
        }
        stage('Notify Slack') {
            steps {
                slackSend(
                    color: '#36a64f',
                    message: "Build successful! :white_check_mark:",
                    channel: '#testing_slack'
                ) 
            }
        }
    }
}
