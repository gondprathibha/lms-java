pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'cd lmsv1 && docker build -t fe .'
                }
            }
        }

        stage('Run') {
            steps {
                script {
                    // Run Docker container
                    docker.image('fe').run('-p 8080:3000 -d')
                }
            }
        }
    }
